<div class="login-page">
    <h2>Login</h2>
    <%= form_for @conn, authentication_path(@conn, :process_login), [as: "login", method: "post"], fn f -> %>
      <div class="form-group">
        <%= label f, :secret, class: "control-label" %>
        <%= password_input f, :secret, class: "form-control" %>
        <%= error_tag f, :secret %>
      </div>

      <div class="form-group">
        <%= submit "Login", class: "btn-bm btn-bm-primary float-right" %>
      </div>
    <% end %>
</div>
